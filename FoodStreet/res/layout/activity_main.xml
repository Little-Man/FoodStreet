<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FFFFFF"
        android:textColor="#F9A293"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="25sp"
        android:text="美食街订餐系统"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvMenu1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:text="商品" 
                android:clickable="true"
                android:onClick="choseFragment"/>

            <TextView
                android:id="@+id/tvMenu2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:text="店铺" 
                android:clickable="true"
                android:onClick="choseFragment"/>

            <TextView
                android:id="@+id/tvMenu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp"
                android:text="我的" 
                android:clickable="true"
                android:onClick="choseFragment"/>
        </TableRow>
        
        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <TextView 
                android:id="@+id/tvMenu_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:clickable="true"
            	android:onClick="choseFragment"/>
            
            <TextView 
                android:id="@+id/tvMenu_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:clickable="true"
            	android:onClick="choseFragment"/>
            
            <TextView 
                android:id="@+id/tvMenu_3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:clickable="true"
            	android:onClick="choseFragment"/>
        </TableRow>
     
    </TableLayout>
    <RelativeLayout 
        android:id="@+id/frags"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </RelativeLayout>
    
</LinearLayout>
