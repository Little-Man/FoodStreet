<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.niit.rs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <!-- 各种权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!--  -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.niit.rs.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.niit.rs.LoginActivity"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="com.niit.rs.RegActivity"
            android:label="@string/title_activity_reg" >
        </activity>
        <activity
            android:name="com.niit.rs.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.niit.rs.ProductDetailActivity"
            android:label="@string/title_activity_product_detail" >
        </activity>
        <activity
            android:name="com.niit.rs.ShopProductActivity"
            android:label="@string/title_activity_shop_product" >
        </activity>
        <activity
            android:name="com.niit.rs.OrderListActivity"
            android:label="@string/title_activity_order_list" >
        </activity>
        <activity
            android:name="com.niit.rs.ShopCartActivity"
            android:label="@string/title_activity_shop_cart" >
        </activity>
        <activity
            android:name="com.niit.rs.OrderListDetailActivity"
            android:label="@string/title_activity_order_list_detail" >
        </activity>
        <activity
            android:name="com.niit.rs.EdutActivity"
            android:label="@string/title_activity_edut" >
        </activity>
    </application>

</manifest>